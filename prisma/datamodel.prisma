type Plan {
  id: ID! @unique
  title: String!
  description: String
  createdBy: User!
  phases: [Phase!]!
}

type Phase {
  id: ID! @unique
  title: String!
  description: String
  order: Int
  createdBy: User!
  weeks: [Week!]!
  plan: Plan!
}

type Week {
  id: ID! @unique
  description: String
  order: Int
  createdBy: User!
  sessions: [Session!]!
  phase: Phase
}

type Session {
  id: ID! @unique
  title: String
  purpose: String
  day: Int
  createdBy: User!
  description: String
}

type AdvancedSession {
  id: ID! @unique
  title: String
  purpose: String
  day: Int
  createdBy: User!
  week: [Week!]!
  sets: [Set!]!
  pauses: [Pause!]!
}

type Set {
  id: ID! @unique
  title: String!
  order: Int!
  bouts: [Bout!]!
  pauses: [Pause!]!
  session: Session
}

type Pause {
  id: ID! @unique
  duration: Int
  length: Int
  order: Int!
  type: PauseType! @default(value: Rest)
  set: Set
  session: Session
}

enum PauseType {
  Rest
  Active
}

type Intensity {
  id: ID! @unique
  title: String!
  description: String
  type: IntensityType
  coefficient: Float!
}

type Bout {
  intensity: Intensity
  duration: Int
  length: Int
  order: Int!
  set: Set!
}

enum IntensityType {
  Interval
  Hard
  Repetition
  Easy
  Long
  Threshold
  MarathonPace
}

type User {
  id: ID! @unique
  name: String!
  email: String! @unique
  password: String!
  plans: [Plan!]!
}
